<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatFragment"
    android:background="@drawable/fone"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ugli_gplusv"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/text1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Настроение"
            android:textStyle="bold"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@id/smileIm"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Как ты себя чувствуешь?"
            app:layout_constraintStart_toEndOf="@id/smileIm"
            app:layout_constraintTop_toBottomOf="@id/text1"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/smileIm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/add_reaction_fill0_wght400_grad0_opsz48"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/ugli_gplusv"
        android:layout_height="wrap_content"
        android:id="@+id/motiv"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nast">
        <TextView
            android:id="@+id/text2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Мотивация"
            android:textStyle="bold"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@id/motIm"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Не сдавайся"
            app:layout_constraintStart_toEndOf="@id/motIm"
            app:layout_constraintTop_toBottomOf="@id/text2"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/motIm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/altitude_fill0_wght400_grad0_opsz48"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/fact"
        android:layout_height="wrap_content"
        android:background="@drawable/ugli_gplusv"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/motiv">
        <TextView
            android:id="@+id/text3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Факты"
            android:textStyle="bold"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@id/factIm"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Хочешь узнать что-то новое?"
            app:layout_constraintStart_toEndOf="@id/factIm"
            app:layout_constraintTop_toBottomOf="@id/text3"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/factIm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tips_and_updates_fill0_wght400_grad0_opsz48"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/settinds"
        android:layout_height="wrap_content"
        android:background="@drawable/ugli_gplusv"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fact">
        <TextView
            android:id="@+id/text4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Настройки"
            android:textStyle="bold"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@id/settIm"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Хочешь изменить параметры?"
            app:layout_constraintStart_toEndOf="@id/settIm"
            app:layout_constraintTop_toBottomOf="@id/text4"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/settIm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_settings_24"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
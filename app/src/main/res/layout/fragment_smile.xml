<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SmileFragment"
    android:background="@drawable/fone">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/check_nast"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ugli_gplusv"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/text_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбери своё настроение"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#3C0067"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/face1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/text_inf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/face2"
        android:src="@drawable/sentiment_very_satisfied_fill0_wght400_grad0_opsz48"/>
    <ImageView
        android:id="@+id/face2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mood_fill0_wght400_grad0_opsz48"
        app:layout_constraintTop_toBottomOf="@id/text_inf"
        app:layout_constraintStart_toEndOf="@id/face1"
        app:layout_constraintEnd_toStartOf="@id/face3"/>
    <ImageView
        android:id="@+id/face3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sentiment_neutral_fill0_wght400_grad0_opsz48"
        app:layout_constraintTop_toBottomOf="@id/text_inf"
        app:layout_constraintStart_toEndOf="@id/face2"
        app:layout_constraintEnd_toStartOf="@id/face4"/>
    <ImageView
        android:id="@+id/face4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sentiment_dissatisfied_fill0_wght400_grad0_opsz48"
        app:layout_constraintTop_toBottomOf="@id/text_inf"
        app:layout_constraintStart_toEndOf="@id/face3"
        app:layout_constraintEnd_toStartOf="@id/face5"/>
    <ImageView
        android:id="@+id/face5"
        android:src="@drawable/sentiment_very_dissatisfied_fill0_wght400_grad0_opsz48"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/text_inf"
        app:layout_constraintStart_toEndOf="@id/face4"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/pods"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/check_nast"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ugli_gplusv">
        <ImageView
            android:id="@+id/inf"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/cat1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/makesm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#1D5903"
            android:fontFamily="sans-serif-light"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/inf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ugli_gplusv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerview"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/smile_item"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>